<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gp.bce" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".CardsProvider"
            android:authorities="com.gp.bce.cardsprovider"
            android:exported="false" />

        <activity
            android:name=".AddCardManually"
            android:label="@string/add_card_manually_title" >
        </activity>
        <activity
            android:name=".TemplateListView"
            android:label="@string/template_list_view_title" >
        </activity>
        <activity
            android:name=".ViewAllCards"
            android:label="@string/card_holder_title" >
        </activity>
        <activity
            android:name=".ViewCard"
            android:label="@string/view_card_title" >
        </activity>
    </application>

</manifest>
